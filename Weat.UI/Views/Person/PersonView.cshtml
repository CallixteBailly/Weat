@model Weat.UI.Models.PersonViewModel
@{
    ViewBag.Title = "PersonView";
}
<div ng-app="app">
    <div ng-controller="mainController">
        <h2 ng-init="personUpdate.Id = @Model.Id;">PersonView</h2>
        <div class="form-group">
            @Html.LabelFor(m => m.Mail, new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Mail,
                new
                {
                    @class = "form-control",
                    data_ng_model = "personUpdate.Mail",
                    test_change = "",
                    data_ng_init = string.Format("personUpdate.Mail = '{0}'", Model.Mail.Replace("'", @"\'"))
                })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.LastName,
                new
                {
                    @class = "form-control",
                    data_ng_model = "personUpdate.LastName",
                    test_change = "",
                    data_ng_init = string.Format("personUpdate.LastName = '{0}'", Model.LastName.Replace("'", @"\'"))
                })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.FirstName,
                new
                {
                    @class = "form-control",
                    data_ng_model = "personUpdate.FirstName",
                    test_change = "",
                    data_ng_init = string.Format("personUpdate.FirstName = '{0}'", Model.FirstName.Replace("'", @"\'"))
                })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Pseudo, new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Pseudo,
                new
                {
                    @class = "form-control",
                    data_ng_model = "personUpdate.Pseudo",
                    test_change = "",
                    data_ng_init = string.Format("personUpdate.Pseudo = '{0}'", Model.Pseudo.Replace("'", @"\'"))
                })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" ng-click ="set(personUpdate)" value="Modifier" />
            </div>
        </div>
        {{1+1}}
        
    </div>
    
</div>


