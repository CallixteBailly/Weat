@model Weat.UI.Models.PersonViewModel
@{
    ViewBag.Title = "PersonView";
}
<div ng-app="app">
    <div ng-controller="mainController">
        <h2 ng-init="personUpdate.Id = @Model.Id;">PersonView</h2>
        {{personUpdate.Id}}
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.Mail, new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                <input class="form-control" type="email" ng-model="personUpdate.Mail" />
                @*@Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })*@
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                <input class="form-control" type="text" ng-model="personUpdate.FirstName" />
                @*@Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })*@
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                <input class="form-control" type="text" ng-model="personUpdate.LastName" />
                @*@Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })*@
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Pseudo, new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                <input class="form-control" type="text" ng-model="personUpdate.Pseudo" />
                @*@Html.TextBoxFor(m => m.Pseudo, new { @class = "form-control" })*@
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                <input class="form-control" type="password" ng-model="personUpdate.Password" />
                @*@Html.TextBoxFor(m => m.Password, new { @class = "form-control" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" ng-click ="set(personUpdate)" value="S’inscrire" />
            </div>
        </div>
        {{1+1}}
        {{personUpdate.Pseudo}}
    </div>
    
</div>

